<script>
    /* ============================================================================
       TEACHER EDIT AREA - C·∫¨P NH·∫¨T N·ªòI DUNG T·∫†I ƒê√ÇY
       ============================================================================ */
    const CONTENT = [
        {
            grade: 3,
            themes: [
                {
